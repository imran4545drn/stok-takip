@using PagedList;
@using PagedList.Mvc;
@model IPagedList<stoktakip.Models.Satislar>
@{
    ViewBag.Title = "Satış Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Satış listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün ad</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Urun.ad</td>
                <td>@item.adet</td>
                <td>@item.fiyat</td>
                <td><img src="~/Content/Image/@item.Urun.resim" width="90" height="90" /></td>
                <td>@Convert.ToDateTime(item.tarih).ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { sayfa = page }), PagedListRenderOptions.Classic)
