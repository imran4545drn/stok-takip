@model stoktakip.Models.Urun
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Ekle", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.ad, "Ad", new { @class = "control-label" })
                    @Html.EditorFor(x => x.ad, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.aciklama, "Açıklama", new { @class = "control-label" })
                    @Html.EditorFor(x => x.aciklama, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.fiyat, "Fiyat", new { @class = "control-label" })
                    @Html.EditorFor(x => x.fiyat, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.stok, "Stok", new { @class = "control-label" })
                    @Html.EditorFor(x => x.stok, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.populer, "Popüler", new { @class = "control-label" })
                    @Html.EditorFor(x => x.populer, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <label for="KategoriID">Kategori</label>
                    @Html.DropDownListFor(x => x.kategoriid, (IEnumerable<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.Label("Resim", new { @class = "control-label" })
                    <input type="file" name="file" class="form-control" />
                </div>

                <button class="btn btn-primary" type="submit">Ekle</button>
                <a href="/Urun/Index" class="btn btn-secondary">Ürün Listesi</a>
            </div>
        </div>
    </div>
}
